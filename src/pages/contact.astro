---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact">
    <div class="flex items-center justify-center bg-[#008080] p-5">
        <form method="post" action="/handle-contact" class="flex flex-col gap-5 text-sm sm:w-3/4 w-full">
            <input
                type="email"
                name="email"
                class="rounded-md p-3 focus:placeholder-[#008080]"
                placeholder="Email"
            />
            <textarea
                class="rounded-md focus:placeholder-[#008080]"
                placeholder="Message"
                name="message"
                rows={5}
                required
            >
            </textarea>
            <p class="text-gray-700 select-none m-0">Email is not required.</p>
            <div>
                <button
                    type="submit"
                    class="bg-[#fbffee] cursor-pointer p-8 rounded-md text-gray-500 hover:text-gray-700 hover:font-bold py-1 border-gray-500"
                >
                    Submit
                </button>
            </div>
        </form>
    </div>
</Layout>
