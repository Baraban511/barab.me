---
import { Image } from "astro:assets";
import astroLogoDark from "@assets/images/astro-logo-dark.svg";
import barabLogoSimple from "@assets/images/barab_logo_simple.png";
import { Icon } from "astro-icon/components";
const links = [
    { name: "Links", href: "https://baraban511.github.io" },
    { name: "CO2 internship", href: "https://data.barab.me" },
    { name: "Mail", href: "mailto:contact@barab.me?subject=Contact" },
];
---

<div
    class="bg-[#fbffee] flex flex-col md:flex-row w-full max-w-screen gap-8 md:gap-16 p-5 text-sm"
>
    <div class="flex-1">
        <div class="flex items-center gap-1">
            <Image src={barabLogoSimple} alt="barab. logo" class="h-6 w-auto" />
        </div>
        <div class="text-gray-500 mb-2 select-all">Learning developer</div>
        <a href="https://astro.build">
            <Image
                src={astroLogoDark}
                alt="Astro logo"
                class="mt-2 h-7 w-auto"
            />
        </a>
    </div>

    <div class="mb-4">
        <div class="font-bold">Randoms links</div>
        <ul class="mt-2">
            {
                links.map((link) => (
                    <li class="mt-2">
                        <a
                            class="text-gray-500 hover:text-[#008080]"
                            href={link.href}
                        >
                            {link.name}
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>

    <div class="text-gray-500 space-y-2">
        <div class="text-xs">
            Copyright Â© 2025 barab.<br />
            All right reserved. <br />
            Build date: {import.meta.env.BUILD_DATE}
        </div>

        <div class="flex items-center justify-start">
            <a
                href="https://github.com/Baraban511"
                class="flex hover:text-[#008080] items-center"
                aria-label="GitHub"
                ><Icon name="tabler:brand-github" class="w-6 h-6" /></a
            ><iframe
                src="https://github.com/sponsors/Baraban511/button"
                title="Sponsor barab"
                height="32"
                width="114"
                class="ml-3 rounded-md"></iframe>
        </div>
    </div>
    <div class="text-gray-500 space-y-2 flex flex-col">
        <Icon name="tabler:xbox-a" class="hover:text-[#008080] w-6 h-6" />
        <Icon name="tabler:xbox-b" class="hover:text-[#008080] w-6 h-6" />
        <Icon name="tabler:xbox-x" class="hover:text-[#008080] w-6 h-6" />
        <Icon name="tabler:xbox-y" class="hover:text-[#008080] w-6 h-6" />
    </div>
</div>
